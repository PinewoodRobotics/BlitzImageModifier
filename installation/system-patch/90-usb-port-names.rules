# ===== USB PORT NAMING BY PHYSICAL PORT =====
# We match by KERNELS=="X-Y" (bus-port) so it works regardless of interface :1.0, :1.3, etc.

# ---------- TOP LEFT (usb4 port 1) ----------
# Cameras (v4l2)
SUBSYSTEM=="video4linux", KERNELS=="4-1", SYMLINK+="usb_top_left_cam"
# Serial (USB-serial: ttyUSB*, CDC-ACM: ttyACM*)
SUBSYSTEM=="tty",        KERNELS=="4-1", SYMLINK+="usb_top_left_tty"

# ---------- TOP RIGHT (usb2 port 2) ----------
SUBSYSTEM=="video4linux", KERNELS=="2-2", SYMLINK+="usb_top_right_cam"
SUBSYSTEM=="tty",         KERNELS=="2-2", SYMLINK+="usb_top_right_tty"

# ---------- BOTTOM LEFT (usb2 port 1) ----------
SUBSYSTEM=="video4linux", KERNELS=="2-1", SYMLINK+="usb_bottom_left_cam"
SUBSYSTEM=="tty",         KERNELS=="2-1", SYMLINK+="usb_bottom_left_tty"

# ---------- BOTTOM RIGHT (usb4 port 2) ----------
SUBSYSTEM=="video4linux", KERNELS=="4-2", SYMLINK+="usb_bottom_right_cam"
SUBSYSTEM=="tty",         KERNELS=="4-2", SYMLINK+="usb_bottom_right_tty"